pipeline {
    agent any
    stages {
        stage('Build and run docker image') {
            steps {
                //echo "This is Build Docker image stage 2"
                sh 'sudo docker pull secarl/2244_ica2:latest'
                sh 'sudo docker run -d -p 8082:80 secarl/2244_ica2:latest'
            } 
        }


        stage('testing') {
            steps {
                sh 'curl -I localhost:8082'
            }
        }

    
    }
}
